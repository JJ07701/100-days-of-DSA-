#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);

    int arr[n];

    for(int i = 0; i < n; i++)
        scanf("%d", &arr[i]);

    int count = 0;
    int prefixSum = 0;

    int freq[1000] = {0};
    freq[0] = 1;

    for(int i = 0; i < n; i++) {
        prefixSum += arr[i];

        if(freq[prefixSum] > 0)
            count += freq[prefixSum];

        freq[prefixSum]++;
    }

    printf("%d", count);

    return 0;
}
